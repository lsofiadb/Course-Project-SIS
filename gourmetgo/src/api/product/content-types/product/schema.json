      "allowedTypes": [
        "images"
      ]
    },
    "category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category"
    },
    "menu": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::menu.menu"
    },
    "ingredients": {
      "type": "text",
      "required": true
    },
    "size": {
      "type": "string",
      "required": true
    }
  }
